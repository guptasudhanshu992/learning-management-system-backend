# Environment Configuration
ENVIRONMENT=development

# Database Configuration
# For development (SQLite - default)
# DATABASE_URL=sqlite:///./lms.db

# For production with Neon PostgreSQL
# Option 1: Use the full DATABASE_URL from Neon (recommended)
# DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Option 2: Use individual PostgreSQL components
# POSTGRES_HOST=your-neon-host.neon.tech
# POSTGRES_PORT=5432
# POSTGRES_USER=your-username
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=your-database-name

# Security
SECRET_KEY=your-super-secret-key-here
CSRF_SECRET_KEY=your-csrf-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
PROJECT_NAME=Learning Management System API
VERSION=1.0.0
API_V1_STR=/api
DEBUG=False

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://priceactionrepository.com", "https://www.priceactionrepository.com"]

# Production Domain
BACKEND_URL=https://api.priceactionrepository.com

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# File Storage (Optional)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Environment
ENVIRONMENT=development