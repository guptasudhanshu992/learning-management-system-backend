# Production Environment Configuration
ENVIRONMENT=production

# Database Configuration (Neon PostgreSQL for production)
# Get this URL from your Neon dashboard
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Alternative: Individual PostgreSQL components
# POSTGRES_HOST=your-neon-host.neon.tech
# POSTGRES_PORT=5432
# POSTGRES_USER=your-username
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=your-database-name

# Security Keys (MUST be changed for production)
SECRET_KEY=your-production-secret-key-here
CSRF_SECRET_KEY=your-production-csrf-secret-key-here

# Frontend URL (your production domain)
FRONTEND_URL=https://priceactionrepository.com

# Application Settings
PROJECT_NAME=Learning Management System API
DEBUG=False
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_SECOND=10

# Payment Services (production keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_live_key
RAZORPAY_KEY_ID=your_razorpay_live_key_id
RAZORPAY_KEY_SECRET=your_razorpay_live_key_secret

# CSRF Protection (secure in production)
CSRF_COOKIE_SECURE=True